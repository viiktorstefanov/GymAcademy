<h1>Delete Workout</h1>
<div class="form">
  <form action='/workout/delete/{{workout._id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{workout.name}}" disabled="true" />
    <label for="name">Description</label>
    <textarea id="name" name="description" disabled="true" />{{workout.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{workout.imageUrl}}" disabled="true" />
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficultyLevel" disabled="true" />
      <option value="1">Beginner</option>
      <option value="2">Intermediate</option>
      <option value="3">Advanced </option>
      <option value="4">Professional </option>
         <script>
    for (const option of document.getElementById('difficulty').children) {
          if({{difficulty}} == Number(option.value)) {
            option.setAttribute('selected', '');
          }     
}
</script>
    </select>
    <input type="submit" value="Delete">
  </form>
</div>